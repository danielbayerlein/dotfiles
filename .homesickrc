#!/usr/bin/env ruby

# Install Homebrew
unless File.file?('/usr/local/bin/brew')
  system('/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"')
end

# Opt-out of Homebrew's analytics
system('brew analytics off')

# Install Homebrew Bundle
system('brew tap Homebrew/bundle')

# Install dependencies via Homebrew
system('brew bundle --global')

# Install Vim plugin manager
system('curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim')

# Install Vim plugins via vim-plug
system('vim +PlugInstall +qall')

# Install Zsh plugins via zplug
system('zplug install')
